// Backend API Configuration for Production
// Copy this file to config.js and update with your backend server URL
// 
// For GitHub Pages deployment, your backend needs to be accessible publicly
// Options:
// 1. Deploy backend to a hosting service (Heroku, DigitalOcean, etc.)
// 2. Use a tunneling service (ngrok, localtunnel) for testing
// 3. Keep backend on a server with a public IP/domain

const SERVER_IP = 'your-backend-domain.com';  // Change this to your backend server
const SERVER_PORT = '8000';  // Or remove if using standard ports (80/443)
const SERVER_BASE_URL = `http://${SERVER_IP}${SERVER_PORT ? ':' + SERVER_PORT : ''}`;

// For HTTPS backend:
// const SERVER_BASE_URL = `https://your-backend-domain.com`;

window.CONFIG = {
  SERVER_IP: SERVER_IP,
  SERVER_PORT: SERVER_PORT,
  BASE_URL: SERVER_BASE_URL + '/',
  API_URL: `${SERVER_BASE_URL}/api`,
  UPLOADS_URL: `${SERVER_BASE_URL}/uploads/`
};

